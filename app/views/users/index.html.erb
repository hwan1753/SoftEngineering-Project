<h1>Your Posts</h1>
	<% @posts.each do |post| %>
		<% if current_user.email == post.user.email %>
		<div class="well">
			<h3><%= post.title %></h3><br>
			
			<div>Writer : <%= post.user.username %></div><br>
			<p><%= post.body %></p>
			<%= link_to "Read More", post_path(post), :class => 'btn
			btn-default' %>
  		</div>
		<hr>
		
		<hr>
		<% end %>
	<% end %>
